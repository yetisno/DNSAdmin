<h3>Profile Setting</h3>
<div class="text-left col-xs-12">
    <%= form_for @current_user, :url => profile_path(@profile), :html => {method: :put, role: :form, class: 'form-horizontal'} do |f| %>
        <div class="form-group">
            <%= f.label 'Username', for: :user_username, class: 'col-xs-4 control-label' %>
            <div class="col-xs-8"><%= f.text_field :username, value: @current_user.username, class: 'form-control', disabled: true %></div>
        </div>
        <div class="form-group">
            <%= f.label 'Email', for: :user_email, class: 'col-xs-4 control-label' %>
            <div class="col-xs-8"><%= f.email_field :email, value: @current_user.email, class: 'form-control', placeholder: 'admin@example.com' %></div>
        </div>
        <div class="form-group">
            <%= f.label :current_password, 'Current Password', for: :user_current_password, class: 'col-xs-4 control-label' %>
            <div class="col-xs-8"><%= f.password_field :current_password, class: 'form-control', placeholder: '********' %></div>
        </div>
        <div class="form-group">
            <%= f.label :new_password, 'New Password', for: :user_password, class: 'col-xs-4 control-label' %>
            <div class="col-xs-8"><%= f.password_field :password, class: 'form-control', placeholder: @rstring %></div>
        </div>
        <div class="form-group">
            <%= f.label :confirm_password, 'Confirm Password', for: :user_password_confirmation, class: 'col-xs-4 control-label' %>
            <div class="col-xs-8"><%= f.password_field :password_confirmation, class: 'form-control', placeholder: @rstring %></div>
        </div>
        <div class="form-group">
            <div class="text-right col-xs-12"><%= f.submit 'Save', class: 'btn btn-primary', data: {disable_with: 'Saving'} %></div>
        </div>
    <% end %>
</div>

